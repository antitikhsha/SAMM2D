{
  "model_name": "SAMM2D",
  "description": "Scale-Aware Multi-Modal 2D Transformer for Intracranial Aneurysm Detection",
  
  "data_dir": "data/processed",
  "labels_csv": "data/labels.csv",
  "output_dir": "outputs/experiment_1",
  
  "img_size": 224,
  "patch_size": 16,
  "in_channels": 1,
  "num_classes": 2,
  
  "embed_dim": 256,
  "depth": 3,
  "num_heads": 4,
  "mlp_ratio": 4,
  "dropout": 0.1,
  
  "batch_size": 8,
  "num_epochs": 50,
  "learning_rate": 1e-4,
  "weight_decay": 0.01,
  "grad_clip": 1.0,
  
  "loss": "focal",
  "focal_alpha": 0.25,
  "focal_gamma": 2.0,
  
  "scheduler_t0": 10,
  "scheduler_tmult": 2,
  
  "num_workers": 4,
  "train_augment": true,
  
  "save_freq": 5,
  "patience": 15,
  
  "seed": 42
}
